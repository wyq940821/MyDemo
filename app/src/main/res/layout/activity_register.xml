<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.easyshop.user.register.RegisterActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/register_title" />
    <EditText
        android:id="@+id/register_username"
        style="@style/AppTheme.EditText.Big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_31"
        android:background="@color/white"
        android:drawableLeft="@drawable/selector_ic_person"
        android:hint="@string/username"
        android:maxLength="20" />
    <EditText
        android:id="@+id/register_password"
        style="@style/AppTheme.EditText.Big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:layout_alignEnd="@+id/register_username"
        android:layout_alignLeft="@+id/register_username"
        android:layout_alignRight="@+id/register_username"
        android:layout_alignStart="@+id/register_username"
        android:layout_below="@+id/register_username"
        android:layout_marginTop="@dimen/dp_6"
        android:drawableLeft="@drawable/selector_ic_lock"
        android:hint="@string/password"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/register_confirm_password"
        style="@style/AppTheme.EditText.Big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignEnd="@+id/register_password"
        android:layout_alignLeft="@+id/register_password"
        android:layout_alignRight="@+id/register_password"
        android:layout_alignStart="@+id/register_password"
        android:layout_below="@+id/register_password"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@color/white"
        android:drawableLeft="@drawable/selector_ic_lock"
        android:hint="@string/pwd_again"
        android:inputType="textPassword" />
    <Button
        android:id="@+id/register_btn"
        style="@style/AppTheme.Button.EasyShop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_alignEnd="@+id/register_confirm_password"
        android:layout_alignLeft="@+id/register_confirm_password"
        android:layout_alignRight="@+id/register_confirm_password"
        android:layout_alignStart="@+id/register_confirm_password"
        android:layout_below="@+id/register_confirm_password"
        android:layout_marginTop="@dimen/dp_40"
        android:enabled="false"
        android:text="@string/register" />
    <ProgressBar
        android:layout_below="@id/register_btn"
        android:id="@+id/register_prb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>
